{
    "status": [
        {
            "code": 200,
            "icon": "error",
            "caption": "The Counter has no data for last month"
        }
    ],
    "elements": [
        {
            "type": "SelectFile",
            "caption": "Logo",
            "extensions": ".png, .svg",
            "name": "LogoData"
        },
        {
            "type": "ValidationTextBox",
            "caption": "Header Text",
            "name": "HeaderText",
            "value": ""
        },
        {
            "type": "ValidationTextBox",
            "caption": "Energy Type",
            "name": "EnergyType",
            "value": "Gas"
        },
        {
            "type": "Select",
            "caption": "Decimal Separator",
            "name": "DecimalSeparator",
            "options": [
                {
                    "caption": "Comma",
                    "value": ","
                },
                {
                    "caption": "Dot",
                    "value": "."
                }
            ]
        },
        {
            "type": "SelectDate",
            "caption": "Start Time",
            "name": "StartTime"
        },
        {
            "type": "SelectDate",
            "caption": "End Time",
            "name": "EndTime"
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "SelectVariable",
                    "caption": "Outside temperature variable (optional)",
                    "name": "TemperatureID",
                    "requireLogging": 1
                },
                {
                    "type": "CheckBox",
                    "caption": "Dynamic Scaling",
                    "name": "TemperatureDynamic"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "SelectVariable",
                    "caption": "Consumption meter variable",
                    "name": "CounterID",
                    "requireLogging": 4
                },
                {
                    "type": "CheckBox",
                    "caption": "Dynamic Scaling",
                    "name": "CounterDynamic"
                }
            ]
        },
        {
            "type": "SelectVariable",
            "caption": "Prediction variable (optional)",
            "name": "PredictionID"
        },
        {
            "type": "Select",
            "name": "CO2Type",
            "caption": "CO2 Type",
            "options": [
                {
                    "caption": "Inactive",
                    "value": -1
                },
                {
                    "caption": "Powermix",
                    "value": 489
                },
                {
                    "caption": "Displacement power mix",
                    "value": 624
                },
                {
                    "caption": "Natural gas",
                    "value": 239
                },
                {
                    "caption": "Fuel oil",
                    "value": 307
                },
                {
                    "caption": "Pellets",
                    "value": 71
                }
            ]
        },
        {
            "type": "SelectVariable",
            "caption": "Custom Text Top",
            "name": "CustomTextIDTop"
        },
        {
            "type": "SelectVariable",
            "caption": "Custom Text Bottom",
            "name": "CustomTextID"
        }
    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Generate PDF",
            "onClick": "if(RAC_GenerateEnergyReport($id)) { \n echo (new IPSModule($id))->Translate('Done! Please open the media file beneath this instance!'); \n }else{echo (new IPSModule($id))->Translate('Fail! Something is wrong');};"
        }
    ]
}